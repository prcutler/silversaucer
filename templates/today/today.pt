<div metal:use-macro="load: ../shared/_layout.pt">
    <div metal:fill-slot="content" tal:omit-tag="True">

<div class="container-fluid bg-dark pt-3 d-flex align-items-center flex-column min-vh-75">

        <div class="page-core">
            <h1>Today in your collection</h1>


            <table class="table table-hover text-light">
                <p>
                    <tr>
                        <th>Release ID</th>
                        <th>Artist Name</th>
                        <th>Album Name</th>
                        <th>Release Date</th>


                    </tr>
                    <span tal:repeat = "e releases">
                        <tr>
                            <td>${e.release_id}</td>
                            <td>${e.artist_name}</td>
                            <td>${e.release_title}</td>
                            <td>${e.mb_release_date}</td>
                        </tr>
                    </span>
                </p>
            </table>

        </div>
    </div>
</div>
</div>
