<div metal:use-macro="load: ../shared/_layout.pt">
    <div metal:fill-slot="content" tal:omit-tag="True">

    <div style="height 100%; width 100%;">
        <div class="container-fluid pt-3 d-flex align-items-center bg-dark pt-3 flex-column">
            <h2>Today in your collection</h2>
            <div class="form-container">
                <form class="form-horizontal" action="" method="POST">
                    <div class="form-group">

                        <p>Releases: <select class="form-control" name="release_id">
                            <option tal:repeat="r releases" value="${r.release_id}"> ${r.artist_name} - ${r.release_title}
                            </option>
                        </select></p>

                        <button type="submit" class="btn-success">Submit</button>
                    </div>
                </form>
            </div>

</div>
        </div>
    </div>
</div>